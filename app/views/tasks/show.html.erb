<h1> Task <%= @task.title %> </h1>
<h2> Details: <%= @task.details %> </h2>

<%# <p> Complete: <%= @task.completed %> </p> %>
<p><%= @task.completed ? "This task is completed!" : "This task is incomplete!" %></p>

<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Delete',
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
